@model UserViewModel
<section class="mb-6 text-gray-500">
    <div class="md:flex md:mb-6 sm:grid-cols-1">

        <div class ="w-1/2">
            <div class="w-1/3 ml-2">
                <label class="text-gray-500 font-bold text-right" asp-for="FirstName"></label>
            </div>
            <div class="w-2/3 ml-2">
                <input class="border focus:outline-grey focus:ring-transparent focus:border-indigo-600" type="text" asp-for="FirstName"/>
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="w-1/2">
            <div class="w-1/3 ml-2">
                <label class="text-gray-500 font-bold text-right" asp-for="LastName"></label>
            </div>
            <div class="w-2/3 ml-2">
                <input class = "border focus:outline-grey focus:ring-transparent focus:border-indigo-600" type="text" asp-for="LastName"/>
                <span asp-validation-for="LastName"></span>
            </div>
        </div>

    </div>
</section>