@model GiftViewModel
<section class="mb-6 text-gray-500">
    <div class="flex mb-6">
        <div class=" w-1/2">
            <div class=" flex w-1/3">
                <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
            </div>
            <div class=" flex w-2/3">
                <input class="border focus:outline-grey focus:ring-transparent focus:border-indigo-600" type="text" asp-for="Title"/>
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="w-1/2">
            <div class="w-1/3">
                <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
            </div>

            <div class="w-2/3">
                <input class="border" type="text" asp-for="Description"/>
                <span asp-validation-for="Description"></span>
            </div>
        </div>


        <div class="w-1/2">
            <div class="w-1/3">
                <label class="text-gray-500 font-bold text-right" asp-for="Priority"></label>
            </div>

            <div class="w-2/3">
                <input class="border" type="text" asp-for="Priority"/>
                <span asp-validation-for="Priority"></span>
            </div>
        </div>

    </div>


    <div class="grid grid-cols-2">
        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="Url"></label>
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Url"/>
            <span asp-validation-for="Url"></span>
        </div>

        <div>
            <label class="text-gray-500 font-bold text-right" asp-for="UserId"></label>
            <select asp-for="UserId" asp-items="@(new SelectList(MockData.Users, "Id", "FullName"))">
                <option>Please select one</option>
            </select>
        </div>
    </div>
</section>